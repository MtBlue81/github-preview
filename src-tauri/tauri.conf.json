{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GitHub PR Preview",
  "version": "0.1.0",
  "identifier": "com.mtblue81.github-preview",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GitHub PR Preview",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "localhost",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "category": "DeveloperTool",
    "shortDescription": "GitHub Pull Request preview tool for efficient code review",
    "longDescription": "A desktop application for reviewing GitHub Pull Requests with efficient UI and real-time updates. Built with Tauri for lightweight and secure operation."
  }
}
